function kc {
  kubectl config get-contexts | grep '*' | awk '{print }'
}

function ke {
  kubectl exec -it $@
}

function kg {
  kubectl get $@
}

function kd {
  kubectl describe $@
}

function kebash {
  ke $1 /bin/bash
}

function kesh {
  ke $1 /bin/sh
}

__kube_ps1()
{
    # Get current context
    CONTEXT=$(kc)

    if [ -n "$CONTEXT" ]; then
        echo "(k8s: ${CONTEXT})"
    fi
}
